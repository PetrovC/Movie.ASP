@model MovieIndex

@{
    ViewData["Title"] = "Index - Film";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Titre
            </th>
            <th>
                Categorie
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies) {
            <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                <img width="200" src="@item.Poster" />
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Editer</a> | 
                <a asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
